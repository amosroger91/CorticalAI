{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./examples/**/*.ts", "./examples/**/*.tsx"],
  "exclude": ["node_modules", "./frontend/**/*"]
}
